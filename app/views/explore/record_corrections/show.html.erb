<div class="species-page home-page container" id="explore-species-page">
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><a href="#"><%= @species.family_name %></a></li>
      <li><a href="#"><%= @species.genus_name %></a></li>
      <li class="is-active"><a href="#" aria-current="page"><%= @species.scientific_name %></a></li>
    </ul>
  </nav>

  <div class="columns">
    <div class="column is-4">
      <aside class="species-correction-image" style="background-image: url(<%= @species.main_image_url %>)"></aside>
    </div>
    <div class="column is-8">
          <div class="container">
            <h1 class="title is-1">
              <%= @species.scientific_name %>
            </h1>
            <h2 class="subtitle">
              <%= @species.common_name || 'No common name' %>
            </h2>
            <p class="subtitle">
              <i class="fad fa-book has-text-success"></i> <%= @species.author || 'No author' %> <%= @species.year || 'No year' %> - <i><%= @species.bibliography || 'No bibliography' %></i>
              <br />
              <%= @species.observations %>
            </h2>
          </div>
    </div>
  </div>
  
  <div class="columns">
    <div class="column is-2">
      <br>
      <br>
      <aside class="menu">
        <ul class="menu-list">
          <li><a href="#specifications">Specifications</a></li>
          <li><a href="#images">Images</a></li>
          <li><a href="#synonyms">Synonyms</a></li>
        </ul>
      </aside>
    </div>

    <div class="column is-10">

      <% @collection.each do |correction| %>
        <div class="">
          <%= render partial: 'explore/record_corrections/correction_item', locals: {correction: correction} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  var temp_token = "<%= current_user.token || @jwt.token %>";
</script>
